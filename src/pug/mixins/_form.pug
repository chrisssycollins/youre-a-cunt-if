mixin select(label, value, status, options)
  if label !=""
    div.ch-col--md-2
      label.ch-form__control-label= label
  div.ch-col--md-4
    select((status)).ch-form__control.ch-form__control--sm
      each option in options
        option(value=option.value)= option.text

