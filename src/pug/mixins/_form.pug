mixin checkbox(label, value, status)
  div.ch-col--md-2
    div.ch-checkbox
      label
        input(type="checkbox", id="checkbox_test", class="ch-checkbox__input")
        != label
        span.ch-checkbox__switch

mixin date(label, value, status)
  if label != ""
    div.ch-col--md-2
      label.ch-form__control-label= label
  div.ch-col--md-4  
    input(type="date", value=value, #{status}).ch-form__control.ch-form__control--sm

